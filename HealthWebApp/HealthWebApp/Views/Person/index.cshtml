@model HealthWebApp.Models.Person.PersonIndexModel

@{
    ViewBag.Tittle = "Patient Index";
}

<h3>Patient List</h3>

<div>
    <table class="table table-bordered">
        <thead>
            <tr class="alert-success">
                <th>Last Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Extension</th>
                <th>Date Of Birth</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Barangay</th>
                <th>Household Profile Id</th>
            </tr>
        </thead>
        <tbody class="alert-info">
            @foreach (var patient in Model.People)
            {
                <tr>
                    <td>@patient.LastName</td>
                    <td>@patient.FirstName</td>
                    <td>@patient.LastName</td>
                    <td>@patient.ExtensionName</td>
                    <td>@patient.DateOfBirth</td>
                    <td>@patient.Sex</td>
                    <td>@patient.Address</td>
                    <td>@patient.Barangay</td>
                    <td>@patient.HouseholdProfileId</td>
                </tr>
            }
        </tbody>
    </table>
</div>
